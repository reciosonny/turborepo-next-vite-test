{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "build:nextjs": {
      "outputs": [
        "apps/nextjs/.next/**",
        "!.next/cache/**"
      ]
    },
    "build:vite": {
      "outputs": [
        "apps/vite/dist/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build:production": {
      "dependsOn": [
        "build:nextjs"
      ],
      "outputs": [
        "apps/nextjs/.next/**"
      ]
    }
  }
}